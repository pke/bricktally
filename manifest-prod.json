{
  "$schema": "https://json.schemastore.org/web-manifest",
  "name": "BrickTally",
  "short_name": "BrickTally",
  "description": "Track your LEGO building progress with BrickTally. Count parts, filter by color, and monitor completion for any LEGO set.",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "theme_color": "#0055BF",
  "background_color": "#ffffff",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "/assets/bricktally-icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/bricktally-icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/bricktally-icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/bricktally-icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ]
}
