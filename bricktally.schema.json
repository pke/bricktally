{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://bricktally.com/bricktally.schema.json",
  "title": "BrickTally Export",
  "description": "Schema for .bricktally export files",
  "type": "object",
  "required": ["version", "exportedAt", "app", "sets"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version number"
    },
    "exportedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the export was created"
    },
    "app": {
      "type": "string",
      "pattern": "^BrickTally/.+$",
      "description": "UserAgent string identifying the app version (e.g. BrickTally/1.13.1)"
    },
    "sets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["fullNumber", "info", "progress", "lastWorkedOn"],
        "properties": {
          "fullNumber": {
            "type": "string",
            "pattern": "^[0-9]+-[0-9]+$",
            "description": "Full set number including version (e.g. 10294-1)"
          },
          "info": {
            "type": "object",
            "required": ["number", "fullNumber", "name", "year", "numParts"],
            "properties": {
              "number": {
                "type": "string",
                "description": "Base set number without version"
              },
              "fullNumber": {
                "type": "string",
                "description": "Full set number including version"
              },
              "name": {
                "type": "string",
                "description": "Set name"
              },
              "year": {
                "type": "integer",
                "description": "Release year"
              },
              "numParts": {
                "type": "integer",
                "minimum": 0,
                "description": "Total number of parts"
              },
              "imageUrl": {
                "type": "string",
                "description": "URL to the set image"
              },
              "lastAccessed": {
                "type": "number",
                "description": "Timestamp of last access (milliseconds since epoch)"
              }
            },
            "additionalProperties": false
          },
          "progress": {
            "type": "string",
            "description": "Compressed progress string (partKey:qty pairs, comma-separated)"
          },
          "lastWorkedOn": {
            "type": "number",
            "description": "Timestamp of when the set was last worked on (milliseconds since epoch)"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
